rule cc
  command = clang++ $opts $in -o $out

build unstruc-dbg : cc vtk.cpp plot3d.cpp translation.cpp block.cpp gmsh.cpp su2.cpp grid.cpp error.cpp point.cpp element.cpp unstruc.cpp
  opts = -g -O0

build unstruc : cc vtk.cpp plot3d.cpp translation.cpp block.cpp gmsh.cpp su2.cpp grid.cpp error.cpp point.cpp element.cpp unstruc.cpp
  opts = -O2

